{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strict": true,
    "lib": ["es2019", "dom"],
    "target": "es2019",
    "downlevelIteration": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "module": "es2020"
  },
  "include": ["src/**/*", "types/**/*"]
}
